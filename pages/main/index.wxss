/* pages/main/index.wxss */

.page-section-ctn {
  text-align: center;
}

.image {
  width: 100%;
  height: 360rpx;
}

.page-body-info {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  height: 420rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
}

.title {
  display: flex;
  align-items: center;
  margin: auto;
  padding: 40rpx;
  font-size: 40rpx;
  text-align: center;
  justify-content: center;
  flex-grow: 1;
}

.page-text {
  width: 100%;
}

.btn-area{
  margin-top: 25rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}